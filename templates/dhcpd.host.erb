host <%= @name %> {
  hardware ethernet   <%= @mac.upcase %>;
  fixed-address       <%= @ip %>;
  option host-name    "<%= @host %>";
  ddns-hostname       "<%= @host %>";
<% if not @options.empty? -%>
<% @options.keys.sort.each do |option| -%>
  option <%= option %> <%= @options[option] %>;
<% end -%>
<% end -%>
}
